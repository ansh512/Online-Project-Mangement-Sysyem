<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instructor</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/e1942af5f1.js" crossorigin="anonymous"></script>
    <style>

html,
body {
  height: 100%;
  margin: 0;
  padding: 0;
  width: 100%;
  font-family: 'Open Sans', sans-serif;
  background-color:  #E1E1E1 ;
}

.grid-container {
  min-height: 100vh;
  display: grid;
  grid-template-columns: 0.8fr 5fr;
  grid-template-rows: 60px 1fr 50px;
}

.header {
  display: flex;
  justify-content: center;
  align-items: baseline;
  grid-column: 1 / span 2;
  background-color:  #F2F2F2  ;
  color:  #1F1F1F ;
  padding: 0.5rem;
  position: relative;
  gap: 72rem;
  border-radius: 10px;
}

.sidebar {
  grid-row: 2 / span 1;
  background-color: #FFFFFF ;
  padding: 1rem;
  margin:5px
}

.main {
  grid-row: 2 / span 1;
  grid-column: 2 / span 1;
  padding: 0.5rem 1rem;
}

.footer {
  grid-column: 1 / span 2;
  background-color:  #F2F2F2 ;
  color: #1F1F1F;
  padding: 1rem;
  text-align: center;
  margin:3px
}
.subheader{
  background-color: #F8F8F8 ;
  color: #1F1F1F;
  padding: 0.5rem;
  display: block;
  border-radius: 5px;
  margin: 3px 3px 7px 3px ;
}
.submain{
  background-color: #F8F8F8;
}

/*style for sidebar */
.sidebar .nav-item a,
.sidebar .nav-item a::after,
.sidebar .nav-item a::before {
  box-sizing: content-box;
}
.nav-item {
  margin-bottom: 10px;
}
.nav-link {
  display: block;
  width: 80%;
  padding: 10px;
  text-decoration: none;
  color: white;
  background-color: #2c3e50;
  border-radius: 1rem;
}
.nav-link.active {
  background-color: #046380;
  color: white;
}
i {
  margin-right: 5px;
}
/* Style the submit button */
button[type="submit"] {
  background-color: #046380;
  border-color: #046380;
  text-transform: uppercase;
  transition: all 0.2s ease-in-out;
  margin-top: 2px;
}
button[type="submit"]:hover {
  background-color: #2c3e50;
  border-color: #2c3e50;
}
/*style for the list */
.dropdown-container {
  display: flex;
  flex-direction: column;
  gap: 10px;
}
.dropdown {
  position: relative;
}
.dropdown-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #F8F8F8;
  padding: 10px;
  cursor: pointer;
  border: 1px solid #ccc;
}
.dropdown-header:hover {
  background-color: #f8f8f8cc;
}
.dropdown-menu {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background-color: hwb(0 95% 5%);
  padding: 10px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
  max-height: 0;
  overflow: hidden;
  width: 100%;
  transition: max-height 0.3s ease-out;
}
.dropdown-menu li {
  padding: 5px 0;
  cursor: pointer;
}
.dropdown-menu li:hover {
  background-color: #eeeeee09;
}
.arrow {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 5px 5px 0 5px;
  border-color: #555 transparent transparent transparent;
  margin-left: 10px;
}
li {
  display: flex;
  gap:8rem;
  align-items: center;
}
li span {
  margin-right: 10px;
}

    </style>
  </head>
  <body>
    <div class="grid-container">

      <div class="header">
        <div><h3 id = "headTitle" style="font-weight: bold;">TU_Labs</h3></div>
        <div><select name = "user" style="border:none;box-shadow:none;" id="user-menu">
          <option value="" disabled selected><%= user %></option>
          <option value="/login/Instructor">My Courses</option>
          <option value="/logout">Logout</option>
        </select></div>
      </div>

      <div class="sidebar">
        <p><%=course%></p>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="/login/Instructor/<%=course %>">
              <i class="fa-solid fa-file-arrow-up"></i> Post
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/login/Instructor/<%=course %>/grade">
              <i class="fa-solid fa-check"></i> Grade
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login/Instructor/<%=course %>/report">
              <i class="fa-solid fa-square-poll-vertical"></i> Reports
            </a>
          </li>
        </ul>
      </div>

      <div class="main">
        <div class = "subheader"><h3 >Grade Assignment</h3></div>
        <% for (let i = 0; i < assignment.length; i++) { %>
          <div class="dropdown-container">
            <div class="dropdown">
              <div class="dropdown-header">
                <span><%= assignment[i].title %></span>
                <div class="arrow"></div>
              </div>
              <ul class="dropdown-menu">
                <% for (let j = 0; j < submission[i].length; j++) { %>
                  <li><span><%= submission[i][j].RollNo %></span>
                 <span><a href="/login/Instructor/<%=course %>/download/<%= submission[i][j]._id%>"> Download</a></span>
                 <span>Max-point: <%=assignment[i].points%></span>
                 <span><%=submission[i][j].type %></span>
                 <span>
                  <form action="/login/Instructor/<%=course %>/submit/<%= submission[i][j]._id%>" method="post">
                    <input name = "grade" type = "number" value="<%=submission[i][j].grade%>">
                    <button type="submit" class="btn btn-primary btn-sm">submit</button>
                  </form>
                </span>
                </li>
                <% } %>
              </ul>
            </div>
          </div>
        <% } %>
      </div>

      <div class="footer">
          <p>&copy; 2023 anubhavbinit</p>
      </div>

    </div>

    <script>
      /*for sidebar */
        document.addEventListener('DOMContentLoaded', function() {
          var navLinks = document.querySelectorAll('.nav-link');
          navLinks.forEach(function(navLink) {
            navLink.addEventListener('click', function() {
              navLinks.forEach(function(link) {
                link.classList.remove('active');
              });
              this.classList.add('active');
            });
          });
        });
      /*logout confiramtion alert*/
        function confirmLogout() {
          if (confirm("Are you sure you want to log out?")) {
            window.location.href = "/logout";
          }
        }
      /*dropdown menu */
        var userMenu = document.getElementById('user-menu');
        userMenu.addEventListener('change', function() {
          var selectedValue = this.value;
          if (selectedValue == "/logout") {
            confirmLogout();
          }else{
            window.location.href = selectedValue;
          }
        });
      /*assignemnt list control */
      var dropdowns = document.querySelectorAll('.dropdown');
      dropdowns.forEach(function(dropdown) {
        var header = dropdown.querySelector('.dropdown-header');
        var menu = dropdown.querySelector('.dropdown-menu');
        
        header.addEventListener('click', function() {
          if (menu.style.maxHeight) {
              menu.style.display = "none";
              menu.style.maxHeight = null;
          } else {
            // close all other dropdown menus
            dropdowns.forEach(function(otherDropdown) {
              if (otherDropdown != dropdown) {
                var otherMenu = otherDropdown.querySelector('.dropdown-menu');
                otherMenu.style.display = "none";
                otherMenu.style.maxHeight = null;

              }
            });
            // open this dropdown menu
            menu.style.display = "block";
            menu.style.maxHeight = menu.scrollHeight + 'px';
          }
        });
      });

      // const form = document.querySelector('form');

      // form.addEventListener('submit', async (event) => {
