  <style>
        /* Define a 2 column grid with a header, main, and footer */
body {
  height: 100%;
  margin: 0;
  padding: 0;
  width: 100%;
  font-family: 'Open Sans', sans-serif;
  background-color:  #E1E1E1 ;
}

/* grid definition */
.grid-container {
  min-height: 100vh;
  display: grid;
  grid-template-columns: 0.8fr 5fr;
  grid-template-rows: 70px 1fr 50px;
}

.header {
  display: flex;
  justify-content: center;
  grid-column: 1 / span 2;
  background-color:  #F2F2F2  ;
  color:  #1F1F1F ;
  padding: 1rem;
  border-radius: 10px;
  align-items: flex-start;
}

/* Style the main section */
main {
  grid-row: 2;
  grid-column: 1/span 2;
  padding: 1rem;
  margin:3px
}

/* Style the footer */
.footer {
  grid-column: 1 / span 2;
  background-color:  #F2F2F2 ;
  color: #1F1F1F;
  padding: 1rem;
  text-align: center;
  margin:3px
}
.text-center{
  display: flex;
  justify-content: center;
  align-items: center;
}
.form {
  background-color: #fff;
  display: block;
  padding: 1rem;
  max-width: 350px;
  border-radius: 0.5rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 1.25rem;
  line-height: 1.75rem;
  font-weight: 600;
  text-align: center;
  color: #000;
}

.input-container {
  position: relative;
}

.input-container input, .form button,select {
  outline: none;
  border: 1px solid #e5e7eb;
  margin: 8px 0;
}

.input-container input,select {
  background-color: #fff;
  padding: 1rem;
  padding-right: 3rem;
  font-size: 0.875rem;
  line-height: 1.25rem;
  width: 300px;
  border-radius: 0.5rem;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

.input-container span {
  display: grid;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  padding-left: 1rem;
  padding-right: 1rem;
  place-content: center;
}

.input-container span svg {
  color: #9CA3AF;
  width: 1rem;
  height: 1rem;
}

.submit {
  display: block;
  padding-top: 0.75rem;
  padding-bottom: 0.75rem;
  padding-left: 1.25rem;
  padding-right: 1.25rem;
  background-color: #4F46E5;
  color: #ffffff;
  font-size: 0.875rem;
  line-height: 1.25rem;
  font-weight: 500;
  width: 100%;
  border-radius: 0.5rem;
  text-transform: uppercase;
}

.forgot-link {
  color: #6B7280;
  font-size: 0.875rem;
  line-height: 1.25rem;
  text-align: center;
}

.forgot-link a {
  text-decoration: underline;
}
.submain{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  background-color: #afced7ef;
  height: 450px;
  width: 750px;
  margin-left: 350px;
  margin-top: 80px;
  border-radius: 0.8rem;
}
.slideshow{
  margin-right: 30px;
  width: 290px;
  height: 390px;
  border-radius: 30px;
  background-color: rgba(225, 225, 225, 0.947); /* Adjust the opacity value as needed */
  overflow: hidden;
  position: relative;
}
  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .caption {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    color: #fff;
    padding: 10px;
    font-size: 18px;
    text-align: center;
  }
  </style>
  <link href="css/styles.css" rel="stylesheet">
  </head>
  
<body>

<div class="grid-container">
  <div class="header">
    <div><h3 id = "headTitle" style="font-weight: bold;">LabBuddy</h3></div>
  </div>
  <main>
    <div class="submain">
      <div class="slideshow">
        <div class="slide">
          <img src="https://s35691.pcdn.co/wp-content/uploads/2019/02/writing-assignment-190304.jpg" alt="Image 1">
          <div class="caption">Efficiently manage your assignments with our intuitive Assignment Management System</div>
        </div>
        <div class="slide">
          <div class="caption">Streamline your workflow, track progress, and ensure timely submissions</div>
          <img src="https://elearningindustry.com/wp-content/uploads/2021/12/shutterstock_1745910617.jpg" alt="Image 2">
        </div>
        <div class="slide">
          <img src="https://educational-innovation.sydney.edu.au/teaching@sydney/wp-content/uploads/2018/02/shutterstock_704741344-e1518752272681-770x521.jpg" alt="Image 3">
          <div class="caption">Experience hassle-free assignment management today!"</div>
        </div>
      </div>
      <div class="text-center">
        <form class="form" action = "/login" method = "POST">
           <p class="form-title">Log in to your account</p>
           <div class="input-container" >
             <select name = "user" required = "">
               <option value="" disabled selected>Select user type</option>
               <option value="admin">Admin</option>
               <option value="instructor">Instructor</option>
               <option value="student">Student</option>
             </select>
         </div>
            <div class="input-container">
              <input placeholder="Enter email" type="email" name = "username" required="">
              <span>
                <svg stroke="currentColor" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" stroke-width="2" stroke-linejoin="round" stroke-linecap="round"></path>
                </svg>
              </span>
          </div>
          <div class="input-container">
              <input placeholder="Enter password" type="password" name = "password" required="">
    
              <span>
                <svg stroke="currentColor" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" stroke-width="2" stroke-linejoin="round" stroke-linecap="round"></path>
                  <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" stroke-width="2" stroke-linejoin="round" stroke-linecap="round"></path>
                </svg>
              </span>
            </div>
             <button class="submit" type="submit">
            Log in
          </button>
          <p class="forgot-link">
            <a href="">Forgot Password?</a>
          </p>
       </form>
       </div>
    </div>
  </main>
  <div class="footer">
    <p>&copy; 2023 anubhavbinit</p>
</div>
</div>

<script>
  const slideshow = document.querySelector('.slideshow');
  const slides = slideshow.querySelectorAll('.slide');
  let currentIndex = 0;

  function showSlide(index) {
    slides.forEach((slide, i) => {
      if (i === index) {
        slide.style.zIndex = 1;
      } else {
        slide.style.zIndex = 0;
      }
    });
  }

  function nextSlide() {
    currentIndex = (currentIndex + 1) % slides.length;
    showSlide(currentIndex);
  }

  // Start the slideshow
  showSlide(currentIndex);
  setInterval(nextSlide, 2000); // Change slide every 2 seconds
</script>

  </body>
